<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dough.fivealive.GameScreenController" prefWidth="1024" prefHeight="768">
    <children>
        <!-- Main Layout Container -->
        <VBox spacing="10.0" style="-fx-background-color: #A9A9A9;" alignment="TOP_CENTER">

            <!-- Top Section: Game Information -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label fx:id="currentCountLabel" text="Current Count: 0" style="-fx-font-size: 18px; -fx-text-fill: white;" />
                <Label fx:id="currentPlayerLabel" text="Current Player: Player 1" style="-fx-font-size: 16px; -fx-text-fill: white;" />
            </VBox>

            <!-- Middle Section: Other Players Information -->
            <VBox fx:id="otherPlayersContainer" alignment="CENTER" spacing="10.0" maxWidth="800">
                <Label text="Other Players:" style="-fx-font-size: 18px; -fx-text-fill: white;" />
                <!-- Dynamically generated player information will be added here -->
            </VBox>

            <!-- Bottom Section: Player's Lives and Cards -->
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #333333; -fx-padding: 20;">
                <!-- Player's Lives -->
                <HBox fx:id="playerLivesContainer" spacing="10.0" alignment="CENTER">
                    <Label text="Five Alive Cards:" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                    <!-- Dynamically generated "Five Alive" cards will be added here -->
                </HBox>

                <!-- Player's Hand -->
                <VBox spacing="10.0" alignment="CENTER">
                    <Label text="Your Hand:" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                    <HBox fx:id="playerHandContainer" spacing="10.0" alignment="CENTER">
                        <!-- Dynamically generated card images will be added here -->
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </children>
</StackPane>
