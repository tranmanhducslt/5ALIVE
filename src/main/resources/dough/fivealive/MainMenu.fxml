<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dough.fivealive.MainMenuController" style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">
    <children>
        <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1080.0" spacing="30.0">
            <!-- Game Logo -->
            <ImageView fitHeight="120.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
                <image>
                    <Image url="@../../logo.png" />
                </image>
            </ImageView>

            <!-- Game Title -->
            <Label text="Five Alive Kartenspiel" VBox.vgrow="NEVER" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 0);" />

            <!-- Start Game Button -->
            <Button fx:id="startButton" onAction="#startGame" text="Start Game" prefWidth="250.0" prefHeight="50.0" VBox.vgrow="NEVER" style="-fx-font-size: 18px; -fx-background-color: #00b4d8; -fx-text-fill: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 0);" />

            <!-- Settings Button -->
            <Button fx:id="settingsButton" onAction="#startSettings" text="Settings" prefWidth="250.0" prefHeight="50.0" VBox.vgrow="NEVER" style="-fx-font-size: 18px; -fx-background-color: #0077b6; -fx-text-fill: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 0);" />

            <!-- Exit Button -->
            <Button fx:id="exitButton" onAction="#exitGame" text="Exit" prefWidth="250.0" prefHeight="50.0" VBox.vgrow="NEVER" style="-fx-font-size: 18px; -fx-background-color: #023e8a; -fx-text-fill: #ffffff; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 0);" />
        </VBox>
    </children>
</VBox>
