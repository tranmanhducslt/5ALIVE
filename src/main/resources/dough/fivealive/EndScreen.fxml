<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="20" style="-fx-background-color: #333333; -fx-padding: 40;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dough.fivealive.EndScreenController">

    <!-- Game Over Message -->
    <Label fx:id="winnerLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Congratulations, Player!" />
    <Label style="-fx-font-size: 18px; -fx-text-fill: #ffffff;" text="Game Over!" />

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="returnToGameSetupButton" onAction="#returnToGameSetup" style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-color: #555555; -fx-text-fill: white;" text="Return to Game Setup" />
        <Button fx:id="returnToMenuButton" onAction="#returnToMainMenu" style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-color: #555555; -fx-text-fill: white;" text="Return to Main Menu" />
    </HBox>

</VBox>
